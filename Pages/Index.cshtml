@page
@model IndexModel
@{
    ViewData["Title"] = "Homepage";
}

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using Microsoft.AspNetCore.Identity
@using Cakekue_J94824.Data
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <h2>Hello @UserManager.GetUserName(User)</h2>
}

<div class="container">
    <div class="row shadow rounded">
        <div class="col-sm-12 col-md-6 col-lg-6 col-xl-6">
            <div id="carouselSlideImages" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-inner h-100">
                    <div class="carousel-item h-100 active">
                        <img src="/images/carousel/img-6.png" class="d-block w-100 h-100" alt="Recipes">
                    </div>
                    <div class="carousel-item">
                        <img src="/images/carousel/img-7.jpg" class="d-block w-100 h-100" alt="Recipes">
                    </div>
                    <div class="carousel-item">
                        <img src="/images/carousel/img-8.jpg" class="d-block w-100 h-100" alt="Recipes">
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-12 col-md-6 col-lg-6 col-xl-6">
            <div class="ab-3 p-2">
                <h2>Try our top picks for a delicious desserts!</h2>
            </div>
            <div class="ab-3 p-3">
                <span class="fs-5 text-dark fst-italic">Sweet Desserts</span>
            </div>
            <div class="mb-3 p-3">
                <span class="fs-5 text-dark fst-italic">Healthy Desserts</span>
            </div>
            <div class="mb-3 p-3">
                <span class="fs-5 text-dark fst-italic">Fastest Delivery</span>
                <p class="py-2">Quick Delivery Guaranteed - your food is on its way!</p>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-12 mp-3">
                <h2 class="text-dark" fst-italic">Today's Special</h2>
                <div id="TodaySpecial" class="row">
                    <div class="col-sm-3 col-md-3 col-lg-3 col-xl-3">
                        <div class="shadow rounded card dishCard">
                            <img class="card-img-top h-75" src="~/images/img-1.jpg" />
                            <div class="card-body">
                                <p class="card-title fw-bold">Fruit Cakes</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-3 col-md-3 col-lg-3 col-xl-3">
                        <div class="shadow rounded card dishCard">
                            <img class="card-img-top h-75" src="~/images/img-2.jpg" />
                            <div class="card-body">
                                <p class="card-title fw-bold">Brownies</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-3 col-md-3 col-lg-3 col-xl-3">
                        <div class="shadow rounded card dishCard">
                            <img class="card-img-top h-75" src="~/images/img-5.jpg" />
                            <div class="card-body">
                                <p class="card-title fw-bold">Kek Batik</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <!-- Add any scripts here -->
 }

