<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Cakekue</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" type="text/css" href="~/css/styles.css" />
    <link rel="stylesheet" href="~/Cakekue_J94824.styles.css" />
</head>
<body>
    <header>
        <nav>
            <div class="logo">Cakekue</div>
            <div class="menu-icon">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </div>
            <ul class="menu">
                <li><a asp-page="/Index">Home</a></li>
                <li><a asp-page="/Menu">Menu</a>
                <li><a asp-page="/ContactUs">Contact</a></li>
                <li><a asp-page="Account/Register">Register</a></li>
                <li><a asp-page="/Account/Login">Log in</a></li>
            </ul>
            <form asp-page="/Account/Logout" method="post">
                    <button type="submit">Logout</button>
            </form>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top text-black p-3">
